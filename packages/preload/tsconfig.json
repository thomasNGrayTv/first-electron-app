{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types": ["node"],

    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "contracts.d.ts",
    "../../types/**/*.d.ts",
    "src/createFile.js"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
